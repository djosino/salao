!!! 5
%html(lang="en")
  %head
    %meta{charset: "utf-8"}
    %meta{:'http-equiv' => "X-UA-Compatible", content: "IE=Edge,chrome=1"}
    %meta{name: "viewport", content: "width=device-width, initial-scale=1.0"}
    %title
      = content_for?(:title) ? 'TUTTIBELLA - ' + yield(:title) : "TUTTIBELLA"
    = csrf_meta_tags
    - if Rails.env.production?
      = stylesheet_link_tag "print4", media: "print4"
    - else
      = stylesheet_link_tag "print4", media: "all"
  %body
    = yield
    :javascript
      window.print()