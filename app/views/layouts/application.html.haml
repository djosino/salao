!!! 5
%html(lang="en")
  %head
    %meta{charset: "utf-8"}
    %meta{:'http-equiv' => "X-UA-Compatible", content: "IE=Edge,chrome=1"}
    %meta{name: "viewport", content: "width=device-width, initial-scale=1.0"}
    %meta{name: "author",   content: "Danilo Josino" }
    %meta{name: "description", content: "Salão"}
    %title= content_for?(:title) ? yield(:title) : "Salão"
    = csrf_meta_tags
    / Le HTML5 shim, for IE6-8 support of HTML elements
    /[if lt IE 9]
      = javascript_include_tag "//cdnjs.cloudflare.com/ajax/libs/html5shiv/3.6.1/html5shiv.js"
    = stylesheet_link_tag "application", :media => "all"
    
    = javascript_include_tag "application"
    = javascript_include_tag "google/google-chart"
    / update browser
    /= javascript_include_tag "http://updateyourbrowser.net/asn.js"

  %body
    %header
      .navbar
        .container-fluid
          .nav-main.span10
            - if current_usuario.is?('empresa_administrador')
              = render partial: 'menus/menu_administracao'
            - elsif current_usuario.is?('empresa_gerente')
              = render partial: 'menus/menu_gerencia'
            - elsif current_usuario.is?('empresa_indexador') or current_usuario.is?('empresa_gerente_indexacao')
              = render partial: 'menus/menu_indexador'
            - elsif current_usuario.empresa?
              = render partial: 'menus/menu_atendimento'
            - else
              = render partial: 'menus/menu_cartorio'

          .right
            #name_system.name_system Salão
        .nav-sub
    
    #body_action.container-fluid
      = yield

    /.bg_loading
    /  #loading
      
    .footer
      .container-fluid
        .row-fluid
          .span6
            Copyright © 2014 - 
            %b= link_to 'Mondrian Tecnologia', "http://www.mondriantecnologia.com", style: "color: white", target: "_blank" 
          .span6
            %span.right Tel: 85 3231-2802    

= javascript_include_tag controller_name
:javascript
  jQuery("#body_action").first().css('min-height', (window.innerHeight - 180) + "px");
  $("#loading").append(circle.canvas);
  $("#loading").append("<b> Aguarde, processando ...</b>");
  $(".bg_loading").hide();
  $("#loading").hide();

- unless browser.modern?
  = javascript_include_tag 'browser/update.js'
