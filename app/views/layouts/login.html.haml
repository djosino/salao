!!! 5
%html(lang="en")
  %head
    %meta{charset: "utf-8"}
    %meta{:'http-equiv' => "X-UA-Compatible", content: "IE=Edge,chrome=1"}
    %meta{name: "viewport", content: "width=device-width, initial-scale=1.0"}
    %meta{name: "author",   content: "Mondrian Tecnologia" }
    %meta{name: "description", content: "Sistema de Digitalização"}
    %title= content_for?(:title) ? yield(:title) : "Sistema de Digitalização"
    = csrf_meta_tags
    / Le HTML5 shim, for IE6-8 support of HTML elements
    /[if lt IE 9]
      = javascript_include_tag "//cdnjs.cloudflare.com/ajax/libs/html5shiv/3.6.1/html5shiv.js"
    = stylesheet_link_tag "http://fonts.googleapis.com/css?family=Roboto:400,700,400italic"
    = stylesheet_link_tag "http://fonts.googleapis.com/css?family=Droid+Serif:400,700"
    = stylesheet_link_tag "http://fonts.googleapis.com/css?family=Nova+Square"
    = stylesheet_link_tag "login", :media => "all"

    
    = javascript_include_tag "application"

  %body
    %header#top
      .container-fluid
        .row-fluid
          #logo
            = link_to root_url do
              = image_tag "principal/logo_site.png"
          %section#navigation
            .span1
            %nav#nav-wrap.span10
              %ul#topnav.sf-menu
                %li.current
                  = link_to 'Inicial', root_url
                %li
                  %a{href: "service.html"}   Serviços
                %li
                  %a{href: "portfolio.html"} Portifólio
                %li
                  %a{href: "contact.html"}   Contato
                /%li
                /  %a{href: "about.html"} About
                /  %ul
                /    %li
                /      %a{href: "element.html"} Elements
              / topnav
              .clear

    .container-fluid{style: 'min-height: 463px'}
      .row-fluid
        = yield
    
    #loading
    %footer
      .container-fluid
        .row-fluid
          #outercopyright
            .container
              #copyright
                Copyright © 2014 - 
                = link_to 'Mondrian Tecnologia', "http://www.mondriantecnologia.com"
