- model_class = Usuario
.row-fluid
  .span12
    %h2.botton-border=t '.title', :default => [:'helpers.titles.edit', 'Edit %{model}'], :model => model_class.model_name.human.titleize
    = flash_message(resource)
    
.row-fluid
  .span8
    = form_for(resource, as: resource_name, url: registration_path(resource_name), :html => { method: :put ,class: 'form-group' }) do |f|
      .box
        .header
          %img{:height => "16", :src => img_header, :width => "16"}
          %p=t '.header', :default => model_class.model_name.human.pluralize.titleize
        .content-form
          .container-fluid
            .control-group.span12
              = f.label :current_password, class: 'control-label'
              .controls
                = f.password_field :current_password, class: 'span6', required: true
              %i (Precisamos da sua senha atual para confirmar as alterações)
                  
          .container-fluid
            .control-group.span6
              = f.label :password, class: 'control-label'
              .controls
                = f.password_field :password, class: 'span12', required: true
            .control-group.span6
              = f.label :password_confirmation, class: 'control-label'
              .controls
                = f.password_field :password_confirmation, class: 'span12', required: true

          .form-actions
            .right
              = f.submit t('.confirm', :default => t("helpers.submit.confirm")),  class: 'btn btn-primary btn-small'
            .left
              = link_to t('.back', :default => t("helpers.links.back")), resource.entidade, class: 'btn btn-small'

