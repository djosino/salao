= form_for @cliente do |f|
  - if @cliente.errors.any?
    #error_explanation
      %h2= "#{pluralize(@cliente.errors.count, "error")} prohibited this cliente from being saved:"
      %ul
        - @cliente.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :nome
    = f.text_field :nome
  .field
    = f.label :cpf
    = f.text_field :cpf
  .field
    = f.label :cep
    = f.text_field :cep
  .field
    = f.label :endereco
    = f.text_field :endereco
  .field
    = f.label :numero
    = f.text_field :numero
  .field
    = f.label :bairro
    = f.text_field :bairro
  .field
    = f.label :data_nascimento
    = f.text_field :data_nascimento
  .field
    = f.label :email
    = f.text_field :email
  .field
    = f.label :telefone
    = f.text_field :telefone
  .field
    = f.label :telefone2
    = f.text_field :telefone2
  .actions
    = f.submit 'Save'
